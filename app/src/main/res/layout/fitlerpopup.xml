<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_round_corners"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingHorizontal="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/minpriceedittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Min"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/lightgrey"/>
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/maxpriceedittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Max"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/lightgrey"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House type"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingHorizontal="15dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/housetypespinner"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="@color/lightgrey"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingHorizontal="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/minsizeedittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Min"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/lightgrey"/>
                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/maxsizeedittext"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Max"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/lightgrey"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>